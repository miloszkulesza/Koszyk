@model List<Koszyk.Models.Produkt>;
@{
    ViewData["Title"] = "Produkty";
}

<div class="row">
    <div class="col">
        <h1>Koszyk <small>@ViewBag.Title</small></h1>
        <hr />
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="row">
        <div class="alert alert-danger">
            Lista produktów jest pusta
        </div>
    </div>
}
else
{
    <div class="row">
        <ul class="list-group col-md-12">
            @foreach (var element in Model)
            {
            <li class="list-group-item list-group-item-action">
                <!-- <div class="thumbnail col-xs-12 col-md-3"> -->
                <img src="@element.urlZdjecia" class="img-fluid" style="width: auto; height: 100px;"/>
                @element.nazwa
                <div class="float-right" style="padding-top: 3%;">
                    @element.cenaNetto PLN
                    <a class="btn btn-primary" href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = element.id })">Do koszyka</a>
                    <a class="btn btn-default" href="@Url.Action("szczegoly", "Produkt", new { id = element.id })">Szczególy</a>
                </div>
                <!-- </div>-->
            </li>
            }
            </ul>
</div>
}