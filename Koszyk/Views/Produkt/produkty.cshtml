@model List<Koszyk.Models.Produkt>;
@{
    ViewData["Title"] = "Produkty";
}

<div class="row">
    <div class="col">
        <h1>Koszyk <small>@ViewBag.Title</small></h1>
        <hr />
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="row">
        <div class="alert alert-danger">
            Lista produktów jest pusta
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var element in Model)
        {
            <div class="thumbnail col-xs-12 col-md-3">
                <img src="@element.urlZdjecia" class="img-fluid img-thumbnail" />
                @element.nazwa @element.cenaNetto PLN<br />
                <a class="btn btn-primary" href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = element.id })">Do koszyka</a>
                <a class="btn btn-default" href="@Url.Action("szczegoly", "Produkt", new { id = element.id })">Szczególy</a>
            </div>
        }
    </div>
}