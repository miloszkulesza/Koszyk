@model List<Koszyk.Models.Produkt>;
@{
    ViewData["Title"] = "Produkty";
}

<div class="row">
    <div class="page-header">
        <h1>Koszyk <small>@ViewBag.Title</small></h1>
    </div>
    @if (Model.Count == 0)
    {
           <div class="alert alert-danger">
               Lista produktów jest pusta
           </div>
    }
    else
    {

        @foreach (var element in Model)
        {
            <div class="thumbnail col-xs-12 col-md-3">
                @element.nazwa @element.cenaBrutto() PLN<br />
                <button class="btn btn-primary">Do koszyka</button>
                <button class="btn btn-default">Szczególy</button>
            </div>
        }
    }
</div>