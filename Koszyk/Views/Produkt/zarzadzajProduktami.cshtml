@model List<Koszyk.Models.Produkt>;
@{
    ViewData["Title"] = "Zarządzaj produktami";
}

<div class="container">
    <div class="row">
        <div class="page-header">
            <h1>Koszyk <small>@ViewBag.Title</small></h1>
        </div>
        @if (Model.Count == 0)
        {
            <div class="alert alert-danger">
                Lista produktów jest pusta
            </div>
        }
        else
        {
            @foreach (var element in Model)
            {
                <div class="col-md-3 col-xs-12 thumbnail">
                    <img src="@element.urlZdjecia" />
                    <h3>@element.nazwa</h3>
                    @element.cenaNetto PLN<br />
                    <a href="@Url.Action("edytuj", "Produkt", new { id = element.id })" class="btn btn-primary">Edytuj</a>
                    <a href="@Url.Action("usun", "Produkt", new { id = element.id })" class="btn btn-danger">Usuń</a>
                </div>
            }
        }
     </div>
</div>

